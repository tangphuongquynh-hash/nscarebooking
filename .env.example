# Environment Variables cho ZNS API
# Copy file này thành .env.local và điền thông tin thực

# ZNS (Zalo Notification Service) Configuration
REACT_APP_ZNS_ACCESS_TOKEN=your_zns_access_token_here
REACT_APP_ZNS_APP_ID=3794181198297525649
REACT_APP_ZNS_SECRET_KEY=your_zns_secret_key_here

# ZNS Template IDs - Thay thế bằng template IDs thực từ Zalo Business
REACT_APP_ZNS_TEMPLATE_BOOKING_CONFIRMED=331977
REACT_APP_ZNS_TEMPLATE_BOOKING_COMPLETED=331978
REACT_APP_ZNS_TEMPLATE_BOOKING_CANCELLED=331979
REACT_APP_ZNS_TEMPLATE_REMINDER=331980

# API Configuration
REACT_APP_API_URL=https://nscare-backend.onrender.com/api

# Hướng dẫn lấy ZNS credentials:
# 1. Đăng ký Zalo Business Account tại https://business.zalo.me/
# 2. Tạo ZNS app và lấy access token
# 3. Tạo các message templates theo mẫu dưới đây
# 4. Lấy template IDs sau khi được duyệt